# HoopRank API Environment Variables
# Copy this file to .env and fill in the values

# Server Port
PORT=4000

# Database connection string
DATABASE_URL=postgres://hooprank:hooprank@127.0.0.1:5432/hooprank

# Set to "production" in production deployments
# This enables stricter security (requires x-user-id header, disables /auth/dev)
NODE_ENV=development

# Enable CORS for local network IPs (for mobile app development)
DEV_CORS_OPEN=true

# Admin API key for /admin/* endpoints
# In production, use a strong random string (e.g., openssl rand -hex 32)
ADMIN_KEY=

# Public URL for generating invite links
PUBLIC_BASE_URL=http://localhost:5174
