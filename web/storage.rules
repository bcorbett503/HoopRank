rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Videos - publicly readable, writable by authenticated users
    match /videos/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.resource.size < 50 * 1024 * 1024;
    }
    // Thumbnails - publicly readable, writable by authenticated users
    match /thumbnails/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024;
    }
    // General uploads (avatars, logos, etc.)
    match /uploads/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
